<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="~/Content/Styles/bootstrap.css">
    <link rel="stylesheet" href="~/Content/Styles/style.css" />
    @*<link rel="stylesheet" href="~/Content/Styles_5/bootstrap.css">*@
    <script src="~/Content/bootstrap.bundle.js"></script>
    <title>@ViewBag.title</title>
    <style>@RenderSection("footerstyle", required:false)</style>
</head>

<header class="fixedtop">
    <div class="container-fluid">
        <div class="row">
            @*<div class="col-1">
            </div>*@
            <div class="col-7">
                <div style="margin-left:70px;">
                    <div style="margin-top:5px;">
                        <h4 style="font-family:'Segoe Script',Verdana, Arial, Helvetica, sans-serif;">PraYa</h4>
                    </div>
                </div>
                <div class="col">
                    <nav class="fixedtopleft">
                        <ul>
                            <li><a href="/Catalogue/Index">Catalogue</a></li>
                            <li><a href="/Catalogue/SearchProj">Rechercher</a></li>
                            <li><a href="/CreationProjet/Index">Créer Projet</a></li>
                            <li><div class="dropdown">
                                    <div class="boutonProfil">Connexion</div>
                                    <div class="dropdown-child">
                                        @*@RenderPage()*@
                                        @if(ViewBag.utilisateur == null)
                                        {
                                        <a href="/Login/Index">Connexion</a>
                                        }
                                        @if (ViewBag.utilisateur != null)
                                        {
                                            <a href="/Login/ModifierUtilisateur">Modifiez votre profil</a>

                                            <a href="/Login/Deconnexion">Deconnectez vous</a>
                                        }
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</header>
<div id="logo">
    <a href="/">
        <img src="~/Content/Images/Logo_praya_fond0.png" border="1" border-color="black" alt="Logo de Praya" />
    </a>
</div>

<body>
    <div class="bodytitreavant"></div>
    @RenderBody()
</body>




<footer class="footerstyle">
    <div class="container-fluid">
        <div class="row">
            <div class="col-4">
                <div id="a_propos">
                    <h1>A propos</h1>
                    <a class="footerblabla" href="mailto:contact@praya.fr">Contactez nous</a><br />
                    <a class="footerblabla" href="/Accueil/QuiSommesNous" target="_blank">Qui sommes nous</a>
                </div>
            </div>
            <div class="col-5">
                <div id="Aide">
                    <h1>Comment ça marche</h1>
                    <div id="listes_sujets_2">
                        <a class="footerblabla" href="/Accueil/Don" target="_blank">Don</a><br />
                        <a class="footerblabla" href="/Accueil/GestionProjet" target="_blank">Gestion de projet</a>
                    </div>
                </div>
            </div>
            <div class="col-3">
                <div>
                    <h1>Suivez nous</h1>
                    <p>
                        <a href="https://www.facebook.com/PraYa-CrowdFunding-102506948483977" target="_blank">
                            <img src="~/Content/Images/facebook.png" alt="Facebook" /></a>
                        <a href="https://www.instagram.com/praya_crowdfunding/" target="_blank">
                            <img src="~/Content/Images/Logo_Instagram.png" height="52" alt="Instagram" /></a>
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</footer>
</html>